@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_YoneticiLayout.cshtml";
}


<main role="main">





    <div class="album py-5 bg-light pt-3" id="tbl">
        <div class="container">
            <h3>En Çok Satanlar</h3>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm">

                            <a href="/Urun/UrunGoruntule/@item.BarkodNo"><img src="@item.Renk.ToList()[0].Resim" class="bd-placeholder-img card-img-top" style="width:100%" /></a>
                            <div class="card-body">
                                <p style="height:50px" class="card-text">@item.Ad</p>
                                <p>@item.Fiyat</p>
                                <div class="d-flex justify-content-between align-items-center">


                                </div>

                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>

</main>






