@model List<Fis>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Siparişlerim</h2>

<table class="table">
    <tr>
        <th>Sipariş Tarihi</th>
        <th>Ödenen Toplam Tutar</th>
        <th>Kredi Karti No</th>
        <th>Mail Adresi</th>
        <th>Teslimat Adresi</th>
        <th>Ürünler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Tarih.ToShortDateString()</td>
            <td>@item.İndirimliOdenenTutar</td>
            <td>@item.KrediKartiNo</td>
            <td>@item.IletisimMaili</td>
            <td>@item.Sehir @item.Ilce @item.Cadde_Sokak No: @item.Numara</td>
            <td><a class="btn btn-info" href="/Siparis/UrunListele/@item.FisID">Ürünler</a></td>
        </tr>
    }

</table>
<br />
<br />
<br />
<h2>Geçmiş Siparişlerin Kategorilere Göre Dağılımı</h2>
<br />
<span>Kadın Kategorisi : @ViewBag.kadin</span>
<div class="progress" style="height:25px">
    <div class="progress-bar" role="progressbar" style="width: @ViewBag.kadin" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<br />
<br />
<span>Erkek Kategoorisi : @ViewBag.erkek</span>
<div class="progress" style="height:25px">
    <div class="progress-bar" role="progressbar" style="width: @ViewBag.erkek" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<br />
<br />
<span>Çocuk Kategorisi : @ViewBag.cocuk</span>
<div class="progress" style="height:25px">
    <div class="progress-bar" role="progressbar" style="width: @ViewBag.cocuk" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<br />
<br />
<span>Güzellik Ürünleri :  @ViewBag.guzellik</span>
<div class="progress" style="height:25px">
    <div class="progress-bar" role="progressbar" style="width: @ViewBag.guzellik" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>

