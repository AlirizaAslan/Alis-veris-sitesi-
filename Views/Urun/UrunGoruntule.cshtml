@model DBMS.ViewModels.UrunGoruntule
@{
    ViewBag.Title = "UrunGoruntule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container p-3">
    <div class="row">

        <div class="col-md-5">
            <img class="w-100" src="@Model.Renk.Resim" alt="Alternate Text" />
            <h5 class="mt-3">@Model.Urun.Fiyat</h5>


        </div>
        <div class="col-md-7 pt-4 pb-5">
            <div class="container">
                <h5>@Model.Urun.Ad</h5>
                <p>@Model.Urun.Açıklama</p>
                <h5>Malzeme</h5>
                <p>@Model.Urun.Malzeme</p>
                <h5>Dış</h5>
                <p>@Model.Urun.Dış</p>
                @using (Html.BeginForm("Sec", "Urun", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Renk")
                        @Html.DropDownList("UrunRenk", new SelectList(Model.Renkler, "Renk1", "Renk1"), new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        @Html.Label("Beden")
                        @Html.DropDownList("UrunBeden", new SelectList(Model.Bedenler, "Beden1", "Beden1"), new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label>
                            Adet
                        </label>
                        <input type="text" name="Miktar" class="form-control" value="@Model.Miktar" />
                    </div>


                    <label style="visibility:hidden">
                        <input type="text" name="BarkodNo" value="@Model.Urun.BarkodNo" />
                    </label>

                    <br />
                    <button class="btn btn-dark">Seç</button>
                    <a class="btn btn-dark ms-4" href="/Sepet/SepeteEkle/@Model.Urun.BarkodNo/@Model.Renk.Renk1/@Model.Beden.Beden1/@Model.Miktar">Sepete Ekle</a>
                    <a class="btn btn-dark ms-4" href="/Favori/FavorilereEkle/@Model.Urun.BarkodNo">Favorilere Ekle</a>
                }

            </div>
          



        </div>
        <br /><br /><br />
        <h1>Yorumlar</h1>
        @foreach (var item in Model.FisUrun)
        {
            <div style="width:100%;background-color:antiquewhite;margin-bottom:20px">

                @if (item.Yorum != null)
                {
                <div class="h4">@item.Fis.Kullanici.Ad @item.Fis.Kullanici.Soyad</div>
                <div>
                    @item.Yorum
                </div>
                }

               
            </div>
        }
        </div>
</div>
<footer style="padding-top:500px">
</footer>
